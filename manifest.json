{
	"manifest_version": 3,
	"name": "hnschat experiment",
	"description": "A decentralised chat. Works for https://hnschat/ only.",
	"version": "1.0.1",
	"icons": {
		"16": "/images/logo-16.png",
		"32": "/images/logo-32.png",
		"48": "/images/logo-48.png",
		"128":"/images/logo-128.png"
	},
	"background": {
		"service_worker": "worker.js"
	},
	"permissions": [
		"storage", 
		"activeTab", 
		"scripting",
		"notifications"
	],
	"action": {
		"default_title": "hnschat",
    	"default_popup": "popup.html",
    	"default_icon": {
            "16": "/images/logo-16.png",
            "32": "/images/logo-32.png",
            "48": "/images/logo-48.png",
            "128":"/images/logo-128.png"
		}
  	},
	"options_page": "options.html",
  	"content_scripts": [{
		"matches": ["https://hns.chat/"],
		"js": ["chat-listener.js"]
	}]
}